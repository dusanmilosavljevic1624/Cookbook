<div id="wrapper">

  <div class="overlay"></div>
  <div class="overlay full" id="cover"></div>
  <!--Overlay -->
  <div class="progress">
    <p>0</p>
  </div>

  <div class="form hidden" id="register-form">
    <div class="tab-content">
      <div id="signup">
        <h1>Sign Up for Free</h1>
        <form action="/" method="post">
          <div class="top-row">
            <div class="field-wrap">
              <label id="aloha">
                First Name
                <span class="req">*</span>
              </label>
              <input autocomplete="off" required type="text"/>
            </div>
            <div class="field-wrap">
              <label>
                Last Name
                <span class="req">*</span>
              </label>
              <input autocomplete="off" required type="text"/>
            </div>
          </div>
          <div class="field-wrap">
            <label>
              Email Address
              <span class="req">*</span>
            </label>
            <input autocomplete="off" required type="email"/>
          </div>
          <div class="field-wrap">
            <label>
              Set A Password
              <span class="req">*</span>
            </label>
            <input autocomplete="off" required type="password"/>
          </div>
          <div class="field-wrap">
            <label>
              Confirm Your Password
              <span class="req">*</span>
            </label>
            <input autocomplete="off" required type="password"/>
          </div>
          <button class="button button-block" type="submit">Get Started</button>
        </form>
      </div>
    </div>
  </div>

  <div class="form hidden" id="login-form">
    <div class="tab-content">
      <div>
        <h1>Welcome back Chef!</h1>
        <form action="/" method="post">
          <div class="field-wrap">
            <label>
              ChefName
              <span class="req">*</span>
            </label>
            <input autocomplete="off" required type="text"/>
          </div>
          <div class="field-wrap">
            <label>
              Password
              <span class="req">*</span>
            </label>
            <input autocomplete="off" required type="password"/>
          </div>
          <button class="button button-block" type="submit">Get Cooking</button>
        </form>
      </div>
    </div>
  </div>

  <div class="container">
    <div class="boxgallery" data-effect="effect-3" id="boxgallery">
      <div class="panel">
        <%= image_tag('background.jpg') %>
      </div>
      <div class="panel">
        <%= image_tag('background-2.jpg') %>
      </div>
      <div class="panel">
        <%= image_tag('background-3.jpg') %>
      </div>
      <div class="panel">
        <%= image_tag('background-4.jpg') %>
      </div>
    </div>
    <div class="modal">
      <h1>Cook Book
        <span>Checkout the recipes from all over the world.</span>
      </h1>
      <div class="modal-buttons">
        <a href="#" id="register-button">Register</a>
        <a href="#" id="login-button">LOGIN</a>
        <a href="#">Look at the recipes</a>
      </div>
    </div>
  </div>
  <!--End of container div -->

  <script type="text/javascript">

    $(function () {

      $('#cover').addClass('visible');
      $('.progress').show();

      var loader = $("body").DEPreLoad({
        OnStep: function (percent) {
          $('.progress').css('width', percent + '%');
          $('.progress > p').text(percent + '%');
        },
        OnComplete: function () {
          setTimeout(function () {
            $('.progress').hide();
            $('.overlay').removeClass('visible');
          }, 1000)
        }
      });
    });

    interval = setInterval(callFunc, 4000);
    function callFunc() {
      $('.next').trigger('click');
    }
    new BoxesFx(document.getElementById('boxgallery'));
  </script>

