<nav id="my-menu">
  <ul>
    <li><%= link_to 'Home', root_path %></li>
    <li><a href="#">Kuhinje (dok ne napravis)</a>
      <ul id="cuisine">
        <% Style.all.each do |style| %>
        <li><%= link_to style.name, style_path(style) %></li>
        <% end %>
      </ul>
    </li>
    <li>
      <a href="#">Ingredients (dok ne napravis)</a>
      <ul id="sendvic">
        <% Ingredient.all.each do |ingredient| %>
          <li><%= link_to ingredient.name, ingredient_path(ingredient)%></li>
        <% end %>
      </ul>
    </li>
    <li>
      <%= link_to 'Recipes', recipes_path %>
      <ul id="drugo">
        <% Recipe.all.each do |recipe| %>
          <li><%= link_to recipe.name, recipe_path(recipe) %></li>
        <% end %>
      </ul>
    </li>
    <li><%= link_to 'Chefs', chefs_path %> </li>
    <li>
      <%= link_to 'Create Recipe', new_recipe_path %>
    </li>
    <% if !logged_in? %>
    <li><%= link_to register_path do %>
          <span class="glyphicon glyphicon-user"></span>
          Sign Up
      <% end %>
    </li>
    <li><%= link_to login_path do %>
          <span class="glyphicon glyphicon-log-in"></span>
          Log in
      <% end %>
    </li>

        <% else %>
        <li id="logged_in_as"><a href="#" >Logged in as: <%= @current_user.chefname %></a></li>
    <li class="dropdown">
      <a href="#" class="dropdown-toggle" data-toggle="dropdown">
        Account <b class="caret"></b>
      </a>

      <ul class="dropdown-menu">
        <li><%= link_to "Profile", current_user %></li>
        <li><%= link_to "Settings", edit_chef_path(current_user) %></li>
        <li class="divider"></li>
        <li>
          <%= link_to "Log out", logout_path%>
        </li>
      </ul>
    </li>
        <% end %>
  </ul>
</nav>

<button id="my-button">| | |</button>
